extends index

block content
	.container
		form.form(method="post", action="/insert", name="newContact")
			.form-group
				label(for="name") Name:
					input#name.form-control(type="text", name="name")
			.form-group
				label(for="phone") Phone:
					input#phone.form-control(type="text", name="phone")
			.form-group
				label(for="email") Email:
					input#email.form-control(type="text", name="email")
			button.btn.btn-default(type="submit") Submit